<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style>
    .payment-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 3rem;
        align-items: flex-start;
        margin-top: 3rem;
        margin-bottom: 3rem;
    }

    .payment-form, .order-summary {
        background-color: #fff;
        border: 1px solid var(--cor-borda);
        border-radius: var(--borda-radius);
        padding: 2.5rem;
        box-shadow: var(--sombra-padrao);
    }

    .payment-form h2, .order-summary h2 {
        font-family: var(--fonte-titulo);
        color: var(--cor-secundaria);
        margin-top: 0;
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--cor-borda);
        padding-bottom: 1rem;
    }

    .payment-methods {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--cor-borda);
    }

    .payment-method {
        padding: 1rem 1.5rem;
        cursor: pointer;
        border-bottom: 3px solid transparent;
        font-weight: bold;
        color: var(--cor-secundaria);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .payment-method.active, .payment-method:hover {
        color: var(--cor-destaque);
        border-bottom-color: var(--cor-destaque);
    }

    .payment-details .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .payment-details .form-group {
        margin-bottom: 1.5rem;
    }

    .payment-details .form-group.full-width {
        grid-column: 1 / -1;
    }

    .pix-info, .boleto-info {
        text-align: center;
        padding: 2rem;
        background-color: var(--cor-primaria);
        border-radius: var(--borda-radius);
    }

    .pix-info .material-icons {
        font-size: 4rem;
        color: var(--cor-destaque);
    }

    .order-summary ul {
        list-style: none;
        margin-bottom: 2rem;
    }

    .order-summary li {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .order-summary .total {
        font-weight: bold;
        font-size: 1.5rem;
        color: var(--cor-secundaria);
        border-top: 1px solid var(--cor-borda);
        padding-top: 1rem;
        margin-top: 1rem;
    }

    .btn-finalizar {
        width: 100%;
        margin-top: 1rem;
    }

    /* Esconde os conteúdos das abas por padrão */
    #credit-card-info, #pix-info, #boleto-info {
        display: none;
    }

    #credit-card-info.active, #pix-info.active, #boleto-info.active {
        display: block;
    }

    @media (max-width: 992px) {
        .payment-container {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 576px) {
        .payment-details .form-row {
            grid-template-columns: 1fr;
        }
        .payment-form, .order-summary {
            padding: 1.5rem;
        }
    }
</style>

<div class="container payment-container">
    <main class="payment-form">
        <h2>Finalizar Pagamento</h2>

        <!-- Abas de Métodos de Pagamento -->
        <div class="payment-methods">
            <div class="payment-method active" onclick="showPaymentMethod('credit-card')">
                <span class="material-icons">credit_card</span> Cartão de Crédito
            </div>
            <div class="payment-method" onclick="showPaymentMethod('pix')">
                <span class="material-icons">pix</span> Pix
            </div>
            <div class="payment-method" onclick="showPaymentMethod('boleto')">
                <span class="material-icons">receipt_long</span> Boleto
            </div>
        </div>

        <!-- Detalhes do Pagamento -->
        <div class="payment-details">
            <!-- Seção Cartão de Crédito -->
            <div id="credit-card-info" class="active">
                <form action="/process-payment" method="POST">
                    <div class="form-group full-width">
                        <label for="card-number" class="form-label">Número do Cartão</label>
                        <input type="text" id="card-number" class="form-control" placeholder="0000 0000 0000 0000" required>
                    </div>
                    <div class="form-group full-width">
                        <label for="card-name" class="form-label">Nome no Cartão</label>
                        <input type="text" id="card-name" class="form-control" placeholder="Nome como impresso no cartão" required>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="expiry-date" class="form-label">Validade</label>
                            <input type="text" id="expiry-date" class="form-control" placeholder="MM/AA" required>
                        </div>
                        <div class="form-group">
                            <label for="cvv" class="form-label">CVV</label>
                            <input type="text" id="cvv" class="form-control" placeholder="123" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-destaque btn-finalizar">Pagar com Cartão</button>
                </form>
            </div>

            <!-- Seção Pix -->
            <div id="pix-info">
                <div class="pix-info">
                    <span class="material-icons">qr_code_2</span>
                    <h3>Pague com Pix</h3>
                    <p>Aponte a câmera do seu celular para o QR Code ou use o código abaixo para finalizar a compra.</p>
                    <strong>Código Pix:</strong>
                    <p>00020126580014br.gov.bcb.pix0136... (código de exemplo)</p>
                    <button class="btn btn-secundario" style="margin-top: 1rem;">Copiar Código</button>
                </div>
            </div>

            <!-- Seção Boleto -->
            <div id="boleto-info">
                <div class="boleto-info">
                    <span class="material-icons">picture_as_pdf</span>
                    <h3>Pagamento com Boleto</h3>
                    <p>O boleto será gerado após a confirmação do pedido. O pagamento pode ser realizado em qualquer banco ou casa lotérica.</p>
                    <button class="btn btn-destaque btn-finalizar">Gerar Boleto</button>
                </div>
            </div>
        </div>
    </main>

    <aside class="order-summary">
        <h2>Resumo do Pedido</h2>
        <ul>
            <li>
                <span>Subtotal</span>
                <span>R$ 259,80</span>
            </li>
            <li>
                <span>Frete</span>
                <span>R$ 15,00</span>
            </li>
            <li class="total">
                <span>Total</span>
                <span>R$ 274,80</span>
            </li>
        </ul>
        <div style="text-align: center; font-size: 0.9rem; color: #6c757d;">
            <span class="material-icons" style="vertical-align: middle; font-size: 1.2rem; color: var(--cor-destaque);">verified_user</span>
            Compra 100% segura.
        </div>
    </aside>
</div>

<script>
    function showPaymentMethod(method) {
        // Esconde todas as seções de detalhes de pagamento
        document.getElementById('credit-card-info').classList.remove('active');
        document.getElementById('pix-info').classList.remove('active');
        document.getElementById('boleto-info').classList.remove('active');

        // Remove a classe 'active' de todas as abas
        document.querySelectorAll('.payment-method').forEach(tab => {
            tab.classList.remove('active');
        });

        // Mostra a seção de detalhes de pagamento correta
        document.getElementById(method + '-info').classList.add('active');
        
        // Adiciona a classe 'active' na aba clicada
        event.currentTarget.classList.add('active');
    }
</script>