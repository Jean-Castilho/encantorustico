<style>
    :root {
        --cor-primaria-entrega: #f8f9fa;
        --cor-secundaria-entrega: #ffffff;
        --cor-destaque-entrega: #007bff;
        --cor-texto-entrega: #343a40;
        --cor-borda-entrega: #dee2e6;
        --sombra-padrao: 0 4px 12px rgba(0, 0, 0, 0.08);
    }

    .delivery-dashboard {
        display: grid;
        grid-template-columns: 400px 1fr;
        gap: 2rem;
        padding: 2rem;
        background-color: var(--cor-primaria-entrega);
        height: calc(100vh - 4rem);
    }

    /* --- Orders List --- */
    .orders-list-container {
        background-color: var(--cor-secundaria-entrega);
        border-radius: var(--borda-radius);
        box-shadow: var(--sombra-padrao);
        padding: 1.5rem;
        overflow-y: auto;
    }

    .orders-list-container h2 {
        margin-top: 0;
        font-size: 1.8rem;
        border-bottom: 2px solid var(--cor-borda-entrega);
        padding-bottom: 1rem;
        margin-bottom: 1.5rem;
    }

    .order-card {
        background-color: #fdfdfd;
        border: 1px solid var(--cor-borda-entrega);
        border-radius: var(--borda-radius);
        padding: 1.5rem;
        margin-bottom: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        border-left: 5px solid transparent;
    }

    .order-card:hover {
        border-left-color: var(--cor-destaque-entrega);
        transform: translateX(5px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    }

    .order-card.selected {
        background-color: #e9f5ff;
        border-left-color: #0056b3;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
    }

    .order-card h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.3rem;
    }

    .order-card p {
        margin: 0;
        color: #6c757d;
    }

    .order-status {
        font-size: 0.9rem;
        font-weight: bold;
        color: #28a745;
        margin-top: 0.5rem;
        display: block;
    }

    /* --- Selected Order Details --- */
    .selected-order-container {
        background-color: var(--cor-secundaria-entrega);
        border-radius: var(--borda-radius);
        box-shadow: var(--sombra-padrao);
        padding: 2rem;
        display: flex;
        flex-direction: column;
    }

    #map-placeholder {
        width: 100%;
        height: 300px;
        background-color: #e9ecef;
        border-radius: var(--borda-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    #selected-order-details h3 {
        margin-top: 0;
        font-size: 2rem;
    }

    .delivery-actions {
        margin-top: auto; /* Pushes buttons to the bottom */
        display: flex;
        gap: 1rem;
    }

    /* --- Responsiveness --- */
    @media (max-width: 1200px) {
        .delivery-dashboard {
            grid-template-columns: 1fr;
            height: auto;
        }
        .orders-list-container {
            max-height: 50vh;
        }
    }
</style>

<div class="delivery-dashboard">

    <!-- Coluna da Lista de Pedidos -->
    <div class="orders-list-container">
        <h2>Pedidos Disponíveis</h2>
        <div id="order-list">
            <% 
              const orders = [
                { id: 1, customerName: 'João da Silva', address: 'Rua das Flores, 123, São Paulo, SP', distance: '5.2 km', status: 'Aguardando Coleta' },
                { id: 2, customerName: 'Maria Oliveira', address: 'Avenida Brasil, 456, Rio de Janeiro, RJ', distance: '8.1 km', status: 'Aguardando Coleta' },
                { id: 3, customerName: 'Carlos Pereira', address: 'Praça da Sé, 789, Salvador, BA', distance: '12.5 km', status: 'Aguardando Coleta' },
                { id: 4, customerName: 'Ana Costa', address: 'Rua dos Pinheiros, 101, Curitiba, PR', distance: '3.8 km', status: 'Aguardando Coleta' },
              ];
            %>
            <% orders.forEach(order => { %>
              <div class="order-card" data-order-id="<%= order.id %>" data-order='<%- JSON.stringify(order) %>'>
                <h3><%= order.customerName %></h3>
                <p><%= order.address %></p>
                <p><strong>Distância:</strong> <%= order.distance %></p>
                <span class="order-status"><%= order.status %></span>
              </div>
            <% }); %>
        </div>
    </div>

    <!-- Coluna de Detalhes do Pedido Selecionado -->
    <div class="selected-order-container">
        <div id="map-placeholder">
            <span>Mapa da Rota</span>
        </div>
        <div id="selected-order-details">
            <h3>Selecione um pedido para ver os detalhes</h3>
            <p>O endereço e as ações de entrega aparecerão aqui.</p>
        </div>
        <div class="delivery-actions" style="display: none;">
            <button class="btn btn-destaque">Iniciar Entrega</button>
            <button class="btn btn-secundario">Obter Direções</button>
        </div>
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const orderList = document.getElementById('order-list');
        const detailsContainer = document.getElementById('selected-order-details');
        const deliveryActions = document.querySelector('.delivery-actions');

        orderList.addEventListener('click', (event) => {
            const cardElement = event.target.closest('.order-card');
            if (!cardElement) return;

            const orderData = JSON.parse(cardElement.dataset.order);

            // Remove selection from other cards
            document.querySelectorAll('.order-card').forEach(card => card.classList.remove('selected'));
            // Add selection to the clicked card
            cardElement.classList.add('selected');

            // Update details panel
            detailsContainer.innerHTML = `
                <h3>${orderData.customerName}</h3>
                <p><strong>Endereço:</strong> ${orderData.address}</p>
                <p><strong>Distância Estimada:</strong> ${orderData.distance}</p>
                <p><strong>Status:</strong> <span class="order-status">${orderData.status}</span></p>
            `;

            // Show action buttons
            deliveryActions.style.display = 'flex';
        });
    });
</script>
