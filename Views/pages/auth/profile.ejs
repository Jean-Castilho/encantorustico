<style>
    .profile-grid {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2.5rem;
        align-items: start;
        margin: 1rem;
        margin-top: 0px;
    }

    /* --- User Card --- */
    .user-card {
        min-width: 400px;
        background-color: #fff;
        padding: 2rem;
        border-radius: var(--borda-radius);
        box-shadow: var(--sombra-padrao);
        text-align: center;
    }

    .user-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto 1rem;
        border: 4px solid var(--cor-destaque);
    }

    .user-card h3 {
        margin-top: 0;
        font-size: 1.5rem;
    }

    .user-card p {
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .account-actions a {
        display: block;
        padding: 0.8rem 1rem;
        margin-bottom: 0.5rem;
        border-radius: var(--borda-radius);
        text-align: left;
        transition: background-color 0.3s, color 0.3s;
        font-weight: bold;
        color: var(--cor-secundaria);
    }

    .account-actions a:hover {
        background-color: #f1f3f5;
        color: var(--cor-destaque);
        text-decoration: none;
    }

    .account-actions .btn-remover {
        margin-top: 1rem;
        border-top: 1px solid var(--cor-borda);
        padding-top: 1rem;
    }

    /* --- Profile Form --- */
    .profile-form-card {
        background-color: #fff;
        padding: 2.5rem;
        border-radius: var(--borda-radius);
        box-shadow: var(--sombra-padrao);
    }

    .profile-form-card h3 {
        margin-top: 0;
        font-size: 1.5rem;
        border-bottom: 1px solid var(--cor-borda);
        padding-bottom: 0.8rem;
        margin-bottom: 1.5rem;
    }

    @media (max-width: 470px) {

        .user-card {

            min-width: 300px;
        }

    }

    /* --- Responsiveness --- */
    @media (max-width: 992px) {
        .profile-grid {
            grid-template-columns: 1fr;
            margin: 1rem;
        }

    }

    /* --- Verification Badge --- */
    .verification-badge {
        display: inline-flex;
        align-items: center;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        gap: 6px;
        letter-spacing: 0.5px;
    }

    .verification-badge .material-icons {
        font-size: 1rem;
        /* Ajustado para 1rem */
    }

    .verification-badge.verified {
        background-color: #e8f5e9;
        /* Verde claro */
        color: #2e7d32;
        /* Verde escuro */
    }

    .verification-badge.not-verified {
        background-color: #fff3e0;
        /* Laranja claro */
        color: #e65100;
        /* Laranja escuro */
    }

    .verification-badge .verify-link {
        color: inherit;
        text-decoration: underline;
        margin-left: 5px;
        font-weight: normal;
    }

    .verification-badge .verify-link:hover {
        text-decoration: none;
    }
</style>

<div class="container">
    <header class="page-header" style="text-align: center; margin-bottom: 1.8rem;">
        <h1>Minha Conta</h1>
    </header>

    <div class="profile-grid">

        <!-- Coluna Lateral: Cartão do Usuário e Ações -->
        <aside class="sidebar-column user-card">
            <img src="/images/About-hero.png" alt="Avatar do Usuário" class="user-avatar">
            <h3>
                <%= session.user.name %>
            </h3>
            <p>
                <%= session.user.email.endereco %>
            </p>
            <div class="account-actions">
                <a href="/orders">Histórico de Pedidos</a>
                <a href="/change-password">Alterar Senha</a>
                <a href="/logout" class="btn-remover" style="width: 100%; text-align: center;">Sair da Conta</a>
            </div>
        </aside>

        <!-- Coluna Principal: Formulário de Informações -->
        <section class="main-column">
            <div class="profile-form-card">
                <h3>Editar Informações Pessoais</h3>
                <form id="updatedForm">

                    <div class="form-group">
                        <label for="name" class="form-label">Nome Completo</label>
                        <input type="text" id="name" name="name" class="form-control" value="<%= session.user.name %>"
                            required>
                    </div>

                    <div class="form-group">
                        <div
                            style="display: flex; gap: 1.5rem; justify-content: flex-start; align-items: center; margin-bottom: 0.5rem;">
                            <label for="email" class="form-label" style="margin-bottom: 0;">E-mail</label>
                            <% if (session.user.email && session.user.email.verified) { %>
                                <span class="verification-badge verified">
                                    <i class="material-icons">check_circle</i> Verificado
                                </span>
                                <% } else if (session.user.email) { %>
                                    <span class="verification-badge not-verified">
                                        <i class="material-icons">warning</i>
                                        <a href="/resend-otp/<%= session.user.email.endereco %>"
                                            style="color: #e65100;">
                                            (Verificar agora)</a>
                                    </span>
                                    <% } %>
                        </div>

                        <input type="email" id="email" name="email" class="form-control"
                            value="<%= session.user.email.endereco %>">
                    </div>

                    <div class="form-group">
                        <div style="display: flex; gap: 1.5rem; justify-content: flex-start; align-items: center;
                            margin-bottom: 0.5rem;">
                            <label for="number" class="form-label" style="margin-bottom: 0;">Telefone</label>
                            <% if (session.user.phone && session.user.phone.verified) { %>
                                <span class="verification-badge verified">
                                    <i class="material-icons">check_circle</i> Verificado
                                </span>
                                <% } else if (session.user.phone && session.user.phone.number) { %>
                                    <span class="verification-badge not-verified">
                                        <i class="material-icons">warning</i>
                                        <a href="/send-sms-otp?phone=<%= session.user.phone.number %>"
                                            style="color: #e65100;">(Verificar agora)</a>
                                    </span>
                                    <% } %>
                        </div>

                        <input type="tel" id="phone" name="phone" class="form-control"
                            value="<%= session.user.phone.number %>">

                        <input type="hidden" id="full_phone" name="full_phone" />

                    </div>

                    <div style="text-align: right; margin-top: 2rem;">
                        <button type="submit" id="saveButton" class="btn btn-destaque">Salvar Alterações</button>
                    </div>

                </form>
            </div>
        </section>

    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/23.0.10/js/intlTelInput.min.js"></script>
<script>
    const phoneInputField = document.querySelector("#phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/23.0.10/js/utils.js",
        initialCountry: "br",
        preferredCountries: ["br", "us", "pt"],
        separateDialCode: true,
        formatOnDisplay: true,
    });

    document
        .getElementById("updatedForm")
        .addEventListener("submit", async function (event) {
            event.preventDefault();

            const notification = document.getElementById('notification-home');


            const saveButton = document.getElementById("saveButton");
            const originalButtonText = saveButton.textContent;

            saveButton.textContent = "Sending...";
            saveButton.disabled = true;

            function showNotification(message, isSuccess) {
                notification.textContent = message;
                notification.style.backgroundColor = isSuccess ? '#28a745' : '#dc3545';
                notification.style.display = 'block';
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 6000);
            }

            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());

            const fullPhone = phoneInput.getNumber();

            document.getElementById("full_phone").value = fullPhone;
            data.phone = fullPhone;

            const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

            try {
                const response = await fetch("/auth/updatedUser", {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json",
                        'X-CSRF-Token': csrfToken
                    },
                    body: JSON.stringify(data),

                });

                const result = await response.json();
                showNotification(result.message, result.success);

                if (response.ok) {
                    saveButton.textContent = "Atualizado";

                } else {
                    showNotification(result.message, result.success);
                }
            } catch (error) {
                console.error("Error:", error);
                showNotification(result.message, result.success);
            }
            setTimeout(() => {
                saveButton.textContent = originalButtonText;
                saveButton.disabled = false;
            }, 6000);


        });

</script>